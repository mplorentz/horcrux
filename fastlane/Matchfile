# Matchfile for iOS code signing
# Documentation: https://docs.fastlane.tools/actions/match/

# Load environment variables from .env file
require 'dotenv'
Dotenv.load

git_url(ENV["MATCH_GIT_URL"] || "git@github.com:mplorentz/horcrux_certificates.git")
storage_mode("git")
type("appstore") # The default type, can be: appstore, adhoc, enterprise or development

app_identifier("com.singleoriginsoftware.horcrux")

# App Store Connect API Key authentication
# Match will automatically detect these environment variables:
# - APP_STORE_CONNECT_API_KEY_ID
# - APP_STORE_CONNECT_ISSUER_ID
# - APP_STORE_CONNECT_API_KEY_PATH (path to .p8 file)
# 
# DO NOT set username or api_key_path here - let match auto-detect from env vars

# Optional: Set to true to skip confirmation prompts
# skip_confirmation(true)

# Optional: Set to true to skip certificate verification
# readonly(true)

